{% extends 'base.html.twig' %}

{% block title %}Agence index{% endblock %}

{% block body %}
    <h1>Agence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumeroAgence</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agence in agences %}
            <tr>
                <td>{{ agence.id }}</td>
                <td>{{ agence.numeroAgence }}</td>
                <td>{{ agence.adresse }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">Il n'y a pas d'agence pour le moment !!!!!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agence_nouveau') }}">Nouvel Agence </a>
{% endblock %}
